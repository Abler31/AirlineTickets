<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="132dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_recycler_item_main"
            android:layout_width="132dp"
            android:layout_height="133dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_recycler_item_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_recycler_item_band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Die Antwoord"
            app:layout_constraintTop_toBottomOf="@id/cv_recycler_item_main"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf_pro_semibold"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_recycler_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Будапешт"
            app:layout_constraintTop_toBottomOf="@id/tv_recycler_item_band"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf_pro_regular"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iv_recycler_item_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plane_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_recycler_item_city"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_recycler_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="от 22 264 ₽"
            app:layout_constraintTop_toTopOf="@id/iv_recycler_item_plane"
            app:layout_constraintBottom_toBottomOf="@id/iv_recycler_item_plane"
            app:layout_constraintStart_toEndOf="@id/iv_recycler_item_plane"
            android:fontFamily="@font/sf_pro_regular"
            android:textSize="14sp"
            android:textColor="@color/white"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>